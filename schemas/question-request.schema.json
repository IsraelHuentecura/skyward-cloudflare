{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://skyward-cloudflare/schemas/question-request.schema.json",
  "type": "object",
  "required": ["question"],
  "properties": {
    "question": {
      "type": "string",
      "minLength": 10,
      "description": "Pregunta que describe el escenario de cumplimiento a evaluar"
    },
    "targets": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Entidades específicas (por ejemplo, procesos o áreas) a mapear contra obligaciones"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": {
        "type": ["string", "number", "boolean"]
      },
      "description": "Metadatos opcionales para enriquecer la pregunta"
    }
  },
  "additionalProperties": false
}
