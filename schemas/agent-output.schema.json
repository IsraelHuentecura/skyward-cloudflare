{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://skyward-cloudflare/schemas/agent-output.schema.json",
  "type": "object",
  "required": ["summary", "obligations"],
  "additionalProperties": false,
  "properties": {
    "summary": {
      "type": "string",
      "description": "Resumen ejecutivo de los hallazgos"
    },
    "obligations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "description", "source", "rationale"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "source": {
            "type": "object",
            "required": ["documentId", "reference"],
            "additionalProperties": false,
            "properties": {
              "documentId": { "type": "string" },
              "reference": { "type": "string" },
              "sectionText": { "type": "string" }
            }
          },
          "rationale": {
            "type": "string"
          },
          "actions": {
            "type": "array",
            "items": { "type": "string" }
          },
          "targets": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "confidence", "justification"],
              "additionalProperties": false,
              "properties": {
                "name": { "type": "string" },
                "confidence": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "justification": { "type": "string" }
              }
            }
          },
          "priority": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"]
          }
        }
      }
    },
    "disclaimers": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
